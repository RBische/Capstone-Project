<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:id="@+id/flContainer">
    <ImageView
        android:id="@+id/handler"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="16dp"
        android:src="@drawable/ic_mover"
        android:layout_gravity="center_vertical"
        />

    <TextView
        android:id="@android:id/text1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/handler"
        android:layout_toEndOf="@+id/handler"
        android:layout_toLeftOf="@+id/ivDelete"
        android:layout_toStartOf="@+id/ivDelete"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="13 km/h"/>

    <ImageView
        android:layout_width="?android:attr/listPreferredItemHeight"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:src="@drawable/ic_delete_black_48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/icon_padding"
        android:id="@+id/ivDelete"
        android:contentDescription="@string/delete"
        />
</RelativeLayout>